<%- include('partials/header.ejs') -%>

    <!-- Content for TASK PROFILE page -->
    <main class="main">
        <!-- Link to the HOME PAGE -->
        <p class="crumbs"><a href="/">Home</a><span>&#187;</span><span>Task id:<%= task.id %></span></p>
        <!-- Heading -->
        <h1>Task profile</h1>

        <!-- Task profile information -->
        <div class="profileWrap">
            <!-- Tags -->
            <div class="profileTags">
                <p>Task name:
                </p>
                <p>Task id:
                </p>
                <p>Task status:
                </p>
            </div>
            <!-- Retrieve information of the task -->
            <div class="profileValues">
                <p>
                    <%= task.name %>
                </p>
                <p>
                    <%= task.id %>

                </p>
                <p>
                    <%=(task.checked==1) ? "Done" : "Pending" %>
                </p>
            </div>
        </div>
    </main>

    <%- include('partials/footer.ejs') -%>